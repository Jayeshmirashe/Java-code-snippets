package com.company;

import java.util.Scanner;

public class Main {

    public static void main(String[] args) {
        System.out.print("enter a four digit abcd ");
        Scanner input= new Scanner(System.in);
        int number=input.nextInt();
        int d=number%10;
        int c=(number/10)%10;
        int b=(number/100)%10;
        int a=(number/1000)%10;
        if(a+b==c+d)
            System.out.println(number+" is a lucky number");
        else
            System.out.println(number+" is not lucky number");
    }
}
