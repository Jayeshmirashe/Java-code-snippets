package com.company;

import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
       System.out.print("enter a number");
       Scanner input=new Scanner(System.in);
       int number=input.nextInt();
       int sum=0;
       while(number>0){  // check if number ABC is 0
           sum+=number%10; //if number ABC then C is added to sum
           number=number/10; // C is removed from ABC i.e AB(again same applies to AB from starting of the loop
       }
       System.out.println("sum= "+sum);
        }
    }
